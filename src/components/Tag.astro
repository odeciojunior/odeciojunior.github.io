---
import IconHash from "@/assets/icons/IconHash.svg";
import { getLanguageFromURL, generateLocalizedPath, type Language } from "@/i18n/utils";

export interface Props {
  tag: string;
  tagName: string;
  size?: "sm" | "lg";
  locale?: Language;
}

const { tag, tagName, size = "sm", locale } = Astro.props;

// Get current language
const currentLanguage = locale || Astro.locals.currentLanguage || getLanguageFromURL(Astro.url.pathname);
---

<li
  class:list={[
    "group inline-block group-hover:cursor-pointer",
    size === "sm" ? "my-1 underline-offset-4" : "mx-1 my-3 underline-offset-8",
  ]}
>
  <a
    href={generateLocalizedPath(`/tags/${tag}/`, currentLanguage)}
    transition:name={tag}
    class:list={[
      "relative pe-2 text-lg underline decoration-dashed group-hover:-top-0.5 group-hover:text-accent focus-visible:p-1 focus-visible:no-underline",
      { "text-sm": size === "sm" },
    ]}
  >
    <IconHash
      class:list={[
        "inline-block opacity-80",
        { "-me-3.5 size-4": size === "sm" },
        { "-me-5 size-6": size === "lg" },
      ]}
    />
    &nbsp;<span>{tagName}</span>
  </a>
</li>
