---
// Root index page - serves English content directly
// With prefixDefaultLocale: false, English content is served from root
import { getPostsByLocale } from "../utils/content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import SimpleCard from "@/components/SimpleCard.astro";
import { SOCIALS } from "@/constants";
import { t } from "@/i18n/utils";

const posts = await getPostsByLocale("en-US");
const currentLanguage = "en-US";

const sortedPosts = posts.sort(
  (a, b) =>
    Math.floor(new Date(b.data.pubDatetime).getTime() / 1000) -
    Math.floor(new Date(a.data.pubDatetime).getTime() / 1000)
);

const featuredPosts = sortedPosts.filter(post => post.data.featured);
const recentPosts = sortedPosts.filter(post => !post.data.featured);


---

<Layout lang={currentLanguage}>
  <Header />
  <main id="main-content">
    <section id="hero">
      <h1>{t(currentLanguage, "blog.title")}</h1>
      <a
        target="_blank"
        href="/rss.xml"
        class="rss-link"
        aria-label="rss feed"
        title="RSS Feed"
      >
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M5 19m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0" /><path d="M4 4a16 16 0 0 1 16 16" /><path d="M4 11a9 9 0 0 1 9 9" /></svg>
        <span class="sr-only">RSS Feed</span>
      </a>

      <p>{t(currentLanguage, "blog.subtitle")}</p>
      <div class="social-wrapper">
        <div class="social-links">{t(currentLanguage, "blog.socialLinksText")}</div>
        <div>
          {
            SOCIALS.map(social => {
              const Icon = social.icon;
              return (
                <a href={social.href} class="link-button" title={social.linkTitle}>
                  <Icon class="icon" />
                  <span class="sr-only">{social.name}</span>
                </a>
              );
            })
          }
        </div>
      </div>
    </section>

    <hr />

    {
      featuredPosts.length > 0 && (
        <>
          <section id="featured">
            <h2>{t(currentLanguage, "blog.featuredPosts")}</h2>
            <ul>
              {featuredPosts.map(post => (
                <SimpleCard
                  id={post.slug}
                  data={post.data}
                  variant="h2"
                  locale={currentLanguage}
                />
              ))}
            </ul>
          </section>
          {recentPosts.length > 0 && <hr />}
        </>
      )
    }

    {
      recentPosts.length > 0 && (
        <section id="recent-posts">
          <h2>{t(currentLanguage, "blog.recentPosts")}</h2>
          <ul>
            {recentPosts.slice(0, 4).map(post => (
              <SimpleCard
                id={post.slug}
                data={post.data}
                variant="h3"
                locale={currentLanguage}
              />
            ))}
          </ul>
        </section>
      )
    }

    <div class="all-posts-btn-wrapper">
      <a href="/posts/" class="link-button">
        {t(currentLanguage, "blog.allPosts")}
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M5 12l14 0" /><path d="M13 18l6 -6" /><path d="M13 6l6 6" /></svg>
      </a>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  /* styles */
  #hero {
    padding-bottom: 1.5rem;
    padding-top: 2rem;
  }
  #hero h1 {
    margin-top: 1rem;
    margin-bottom: 1rem;
    display: inline-block;
    font-size: 1.875rem;
    line-height: 2.25rem;
    font-weight: 700;
  }
  @media (min-width: 640px) {
    #hero h1 {
      margin-top: 2rem;
      margin-bottom: 2rem;
      font-size: 3rem;
      line-height: 1;
    }
  }
  #hero .rss-link {
    margin-bottom: 1.5rem;
  }
  #hero .rss-link:hover {
    transform: rotate(6deg);
  }
  #hero p {
    margin-top: 0.5rem;
    margin-bottom: 0.5rem;
  }
  .social-wrapper {
    margin-top: 1rem;
    display: flex;
    flex-direction: column;
  }
  @media (min-width: 640px) {
    .social-wrapper {
      flex-direction: row;
      align-items: center;
    }
  }
  .social-links {
    margin-bottom: 0.25rem;
    margin-right: 0.5rem;
    white-space: nowrap;
  }
  @media (min-width: 640px) {
    .social-links {
      margin-bottom: 0;
    }
  }

  /* ===== Featured & Recent Posts Sections ===== */
  #featured,
  #recent-posts {
    padding-bottom: 1.5rem;
    padding-top: 3rem;
  }
  #featured h2,
  #recent-posts h2 {
    font-size: 1.5rem;
    line-height: 2rem;
    font-weight: 600;
    letter-spacing: 0.025em;
  }
  .all-posts-btn-wrapper {
    margin-top: 2rem;
    margin-bottom: 2rem;
    text-align: center;
  }
</style>